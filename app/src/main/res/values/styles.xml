<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TeamCommittee">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeamDesignation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeamMemberImage">
        <item name="android:layout_width">@dimen/team_image_width</item>
        <item name="android:layout_height">@dimen/team_image_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TeamMemberName">
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TeamLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SignUpSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/margin_5dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_5dp</item>
    </style>

    <style name="ProfileHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/profile_header_margin</item>
        <item name="android:textSize">@dimen/textsize_header</item>
    </style>
    
    <style name="UneditableProfileDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_info</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
